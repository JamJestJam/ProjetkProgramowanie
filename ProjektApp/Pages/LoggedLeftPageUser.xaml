                                <Expander HorizontalAlignment="Stretch" Header="DDR3">
                                    <StackPanel Orientation="Vertical" Margin="24,8,0,16">

                                    </StackPanel>
                                </Expander>
                                <Expander HorizontalAlignment="Stretch" Header="DDR4">
